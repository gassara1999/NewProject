{% extends 'base.html.twig' %}

{% block title %}Clients index{% endblock %}

{% block body %}
    <h1>Clients </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Mail</th>
                <th>ClientName</th>
                <th>Phone</th>
                <th>Birthday</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.mail }}</td>
                <td>{{ client.ClientName }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.birthday ? client.birthday|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_clients_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('app_clients_edit', {'id': client.id}) }}">edit</a>
                    <a href="{{ path('app_clients_delete', {'id': client.id}) }}">delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_clients_new') }}">Create new</a>
{% endblock %}
